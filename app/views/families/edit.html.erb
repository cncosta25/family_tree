<!-- Validation failure messages -->
<% if @family.errors.any? %>
  <% @family.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>The <%= @family.name %>s</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_family/<%= @family.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for is_member -->
      <div class="checkbox">
        <label for="is_member">
          <input type="checkbox" id="is_member" name="is_member" value="1" <%= "checked" if @family.is_member %>>
          Are you a member of this family?
        </label>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @family.user_id %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Family Name
        </label>

        <input type="text" id="name" name="name" placeholder="ex. Smith" class="form-control" value="<%= @family.name %>">
      </div>

      <button class="btn btn-warning">
        Update Family
      </button>
      or
      <a href="/families/<%= @family.id %>">Cancel</a>
    </form>
  </div>
</div>
