<div class="page-header">
  <h1>
    Relationships
    <a href="/relationships/new" class="btn btn-lg btn-success">New Relationship</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Relationship type</th>
        <th>Other member</th>
        <th>Member</th>
        <th>Actions</th>
      </tr>

      <% @relationships.each do |relationship| %>
      <tr>
        <td><%= relationship.relationship_type %></td>
        <td><%= relationship.other_member_id %></td>
        <td><%= relationship.member_id %></td>
        <td>
          <a href="/relationships/<%= relationship.id %>" class="btn btn-primary">Show</a>
          <a href="/relationships/<%= relationship.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_relationship/<%= relationship.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
