<div class="page-header">
  <h3>Member #<%= @member.id %></h3>

  <div class="btn-group">
    <a href="/members" class="btn btn-default btn-sm">
      <i class="fa fa-chevron-left"></i>
    </a>
    <a href="/members/<%= @member.id %>/edit" class="btn btn-default btn-sm">
    <i class="fa fa-edit fa-fw"></i>
    </a>
    <a href="/delete_member/<%= @member.id %>" class="btn btn-default btn-sm" rel="nofollow">
      <i class="fa fa-trash-o fa-fw"></i>
    </a>
  </div>

</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Surname</dt>
      <dd><%= @member.surname %></dd>

      <dt>Name</dt>
      <dd><%= @member.name %></dd>

      <dt>Notes</dt>
      <dd><%= @member.notes %></dd>

      <dt>Family</dt>
      <dd><%= @member.family_id %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @member.image %>" class="img-thumbnail" width="150"></dd>

    </dl>

    </div>

  </div>
</div>
