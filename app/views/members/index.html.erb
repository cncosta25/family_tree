<div class="page-header">
  <h1>
    Members
    <a href="/members/new" class="btn btn-lg btn-success">New Member</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Surname</th>
        <th>Name</th>
        <th>Notes</th>
        <th>Family</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @members.each do |member| %>
      <tr>
        <td><%= member.surname %></td>
        <td><%= member.name %></td>
        <td><%= member.notes %></td>
        <td><%= member.family.name %></td>
        <td><img src="<%= member.image %>" class=" img-thumbnail" width="300"></td>
        <td>
          <a href="/members/<%= member.id %>" class="btn btn-primary">Show</a>
          <a href="/members/<%= member.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_member/<%= member.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
